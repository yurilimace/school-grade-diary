// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StudendClass {
  id String  @unique @default(uuid())
  name String @default("")
  students Student[]
  Tests Test[]
}

model Student {
  id String @unique @default(uuid())
  name String
  age Int
  StudentClass StudendClass @relation(fields: [studentClassId],references: [id])
  studentClassId String
}

model Test {
  id String @unique @default(uuid())
  title String
  description String?
  maxScore Int
  subject SchoolSubject
  StudentClass StudendClass @relation(fields: [studentClassId],references: [id])
  studentClassId String

}

enum SchoolSubject {
  Math
  History
  Geography
  Portuguese
}
